{
    "djlint.pythonPath": "${workspaceFolder}/.venv/bin/python",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "pylint.enabled": true,
    "pylint.path": [
        "${workspaceFolder}/.venv/bin/python",
        "-m",
        "pylint",
        "--no-docstring-rgx",
        "^_|Meta"
    ],
    "pylint.interpreter": [
        "${workspaceFolder}/.venv/bin/python"
    ],
    "mypy-type-checker.path": [
        "${workspaceFolder}/.venv/bin/python",
        "-m",
        "mypy"
    ],
    "mypy-type-checker.interpreter": [
        "${workspaceFolder}/.venv/bin/python"
    ],
    "git.openRepositoryInParentFolders": "never",
    "emmet.includeLanguages": {
        "django-html": "html",
        "html": "html"
    },
    "html.format.templating": true,
    "html.format.unformatted": null,
    "[django-html]": {
        "editor.defaultFormatter": "monosans.djlint",
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
            "other": true,
            "comments": true,
            "strings": true
        },
        "djlint.enableLinting": true,
        "djlint.profile": "django"
    },
    "[python]": {
        "djlint.enableLinting": false
    },
    "[javascript][typescriptreact][typescript][javascriptreact]": {
        "djlint.enableLinting": false
    },
    "[css][scss]": {
        "djlint.enableLinting": false,
        "editor.defaultFormatter": "stylelint.vscode-stylelint"
    },
    "files.associations": {
        "**/*.html": "html",
        "**/templates/**/*.html": "django-html",
        "**/templates/**/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "indentRainbow.ignoreErrorLanguages": [
        "django-html",
        "html"
    ],
    "djlint.blankLineBeforeTag": [
        "comment",
        "include",
        "block"
    ],
    "djlint.blankLineAfterTag": [
        "extends",
        "load",
        "include",
        "endblock",
        "endcomment"
    ],
    "djlint.formatJs": false,
    "djlint.formatCss": false,
    "djlint.ignore": [
        "H023"
    ],
    "djlint.maxLineLength": 79
}